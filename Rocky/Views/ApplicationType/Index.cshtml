@model IEnumerable<ApplicationType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="ApplicationType" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> &nbsp; Create new Application Type
            </a>
        </div>
    </div>
    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Application Type Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model )
                {
                    <tr>
                        <td>@obj.Name</td>                        
                        <td class="text-center">
                            <div class="w-75">
                                <a asp-action="Edit" asp-controller="ApplicationType" asp-route-Id="@obj.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="ApplicationType" asp-route-Id="@obj.Id" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No application type exists </p>
    }
</div>

